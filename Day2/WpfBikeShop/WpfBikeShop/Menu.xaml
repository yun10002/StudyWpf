<Page x:Class="WpfBikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Center">
            <Button x:Name="btnProduct" Width="200" Margin="10" 
                    Content="Products" FontSize="24" Click="btnProduct_Click"/>
            <Button x:Name="btnLiveSupport" Width="200" Margin="10" 
                    Content="Live Support" FontSize="24" Click="btnLiveSupport_Click"/>
            <Button x:Name="btnEmailSupport" Width="200" Margin="10" 
                    Content="Email Support" FontSize="24" Click="Button_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0" Background="Azure" Margin="30">
            <Label Content="BikeShop" FontSize="40" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
